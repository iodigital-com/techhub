---
import MarkdownArticleLayout from '../../layouts/ArticleLayout.astro';
import { getSeries } from '@utils/content-collections.util';
import { getCollection, getEntries } from 'astro:content';

export async function getStaticPaths() {
  const articles = await getCollection('articles');

  return Promise.all(
    articles.map(async (article, index) => {
      const series = await getSeries(articles, article)
      const authors = await getEntries(article.data.authors)
      const prevArticle = articles[index + 1] || null
      const nextArticle = articles[index - 1] || null
      console.log(series.length)

      return {
        params: { slug: article.slug },
        props: {
          article,
          authors,
          series,
          prevArticle,
          nextArticle,
        },
      };
    })
  );
}

const { article, series, authors, nextArticle, prevArticle } = Astro.props
const { Content } = await article.render()
---

<MarkdownArticleLayout
  nextArticle={nextArticle}
  prevArticle={prevArticle}
  article={article}
  series={series}
  authors={authors}
>
  <Content />
</MarkdownArticleLayout>
