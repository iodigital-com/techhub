---
import ArticleLayout from '@layouts/ArticleLayout.astro';
import { type Serie } from '@types';
import { getSeries } from '@utils/content-collections.util';
import { getCollection, getEntries, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const articles = await getCollection('articles');

  return Promise.all(
    articles.map(async (article, index) => {
      const series = await getSeries(articles, article);
      const authors = await getEntries(article.data.authors);
      const previousArticle = articles[index - 1] || null;
      const nextArticle = articles[index + 1] || null;

      return {
        params: { slug: article.slug },
        props: {
          article,
          authors,
          series,
          previousArticle,
          nextArticle,
        },
      };
    })
  );
}

interface Props {
  series: Serie;
  previousArticle: CollectionEntry<'articles'>;
  nextArticle: CollectionEntry<'articles'>;
  authors: CollectionEntry<'authors'>[];
  article: CollectionEntry<'articles'>;
}

const { article, series, authors, nextArticle, previousArticle } = Astro.props;
const { Content } = await article.render();
---

<ArticleLayout
  nextArticle={nextArticle}
  previousArticle={previousArticle}
  article={article}
  series={series}
  authors={authors}
>
  <Content />
</ArticleLayout>
