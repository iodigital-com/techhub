---
import Lottie from 'astro-integration-lottie/Lottie.astro';
---

<div class="container">
  <div class="page404">
    <Lottie src="/src/lottie/404.json" autoplay={true} />
  </div>
  <div class="content">
    <h1 class="title">Oi, looks like we lost this page.</h1>
    <p class="links">
      Take a small detour, go back to
      <a href="/" class="text-gray-400 hover:text-gray-500">homepage</a>,
      <a href="/articles" class="text-gray-400 hover:text-gray-500">articles</a>
      or check our
      <a href="/videos" class="text-gray-400 hover:text-gray-500">videos</a>.
    </p>
  </div>
</div>

<style>
  .container {
    @apply flex items-center space-x-3;
  }

  .page404 {
    @apply w-[40rem];
  }

  .content {
    @apply p-4 text-center;
  }

  .title {
    @apply text-4xl xl:text-5xl;
  }

  .links {
    @apply mt-4 text-lg xl:text-2xl;
  }
</style>
