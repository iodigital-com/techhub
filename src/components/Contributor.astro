---
const { contributor } = Astro.props;
---

<a
  href={`/authors/${contributor.slug}`}
  class={`flex flex-col items-center text-center hover:text-io_blue-700`}
>
  <div
    class="flex-0 md:h-34 md:w-34 relative h-28 w-28 overflow-hidden rounded-full border-4 border-white md:mb-2 lg:h-40 lg:w-40"
  >
    <img
      src={contributor.data.avatar.src}
      width={175}
      height={175}
      alt={`Avatar of ${contributor.data.name}`}
      class="rounded-full"
    />
  </div>
  <p>{contributor.data.name}</p>
  <p class="text-sm text-gray-500">{contributor.data.occupation}</p>
</a>
