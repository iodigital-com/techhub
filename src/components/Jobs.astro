---
import { type Jobs } from '@utils/jobs';
import { Icon } from 'astro-icon/components';

interface Props {
  jobs: Jobs[];
}

const { jobs } = Astro.props;
---

<div class="grid gap-4 gap-y-10 xl:grid-cols-5">
  {
    jobs.map((job) => (
      <a
        href={job.careers_url}
        target="_blank"
        rel="noreferrer"
        class="h-40 border-t border-slate-200 pt-3"
      >
        <article>
          <header>
            <h3 class="text my-1.5 text-xl font-medium" set:html={job.title} />
          </header>
          <p class="mb-2 font-serif text-sm font-light">{job.location}</p>
          <Icon name="external-link" size={24} class="text-gray-400" />
        </article>
      </a>
    ))
  }
  <a
    href="https://www.iodigital.com/en/careers/jobs?expertise=Technology"
    target="_blank"
    rel="noreferrer"
    class={`h-40 p-2 pt-3 bg-io_blue-600 text-white hover:bg-io_blue-700`}
  >
    <h3 class="text my-1.5 text-2xl font-medium">
      View all <span class="font-serif font-light">jobs</span>
    </h3>
    <Icon name="external-link" size={24} class="text-white" />
  </a>
</div>
