---
import { Image } from 'astro:assets';
const { video, class: className } = Astro.props;
---

<a href={`/videos/${video.id}`} class={className}>
  <article>
    <Image
      alt={video.title}
      src={video.thumbnails.default.url.replace('default', 'maxresdefault')}
      width={1280}
      height={720}
    />
    <header>
      <h3 set:html={video.title} />
      <p>{video.description}</p>
    </header>
  </article>
</a>

<style>
  a {
    @apply flex h-full bg-gray-100 p-8;
  }

  header {
    @apply mt-8;
  }

  h3 {
    @apply mb-2 text-3xl font-medium line-clamp-2;
  }

  p {
    @apply hyphens-auto text-lg line-clamp-3;
  }
</style>
