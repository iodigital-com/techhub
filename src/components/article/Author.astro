---
import AuthorSocials from '@components/AuthorSocials.astro';
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
  author: CollectionEntry<'authors'>;
}

const { author } = Astro.props;

const socials = {
  github: author.data.github,
  linkedin: author.data.linkedin,
  twitter: author.data.twitter,
  website: author.data.website,
};
---

<div class="flex space-x-4 pt-6 pb-10 xl:border-b xl:border-gray-200 xl:pt-11 xl:dark:border-gray-700">
  <div class="flex items-center">
    <Image
      class="rounded-full"
      src={author.data.avatar}
      alt={author.data.name}
      height={100}
      width={100}
    />
  </div>
  <div class="flex flex-col justify-center gap-2">
    <a class="text-io_green-600 hover:text-io_green-700 text-lg" href={`/authors/${author.slug}`}>
      {author.data.name}
    </a>
    <AuthorSocials socials={socials} name={author.data.name} renderAxis="vertical" />
  </div>
</div>
